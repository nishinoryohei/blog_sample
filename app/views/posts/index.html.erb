<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<p>ようこそ<%= current_user.name %>さん</p>
<%= link_to 'New Post', new_post_path %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <% if current_user.id == post.user.id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


